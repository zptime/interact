# Absolute or relative path to the 'celery' command:
CELERY_BIN="/opt/virt/interact/bin/celery"


# App instance to use
# comment out this line if you don't use an app
CELERY_APP="interact"

# or fully qualified:
#CELERY_APP="proj.tasks:app"

# Where to chdir at start.
CELERYBEAT_CHDIR="/opt/virt/interact/interact/"

# Extra arguments to celerybeat
CELERYBEAT_OPTS="--schedule=/var/run/celery/celerybeat-schedule"

CELERYBEAT_LOG_FILE="/var/log/celery/interact_beat.log"
CELERYBEAT_PID_FILE="/var/run/celery/interact_beat.pid"

CELERYBEAT_LOG_LEVEL="DEBUG"

CELERYBEAT_USER="root"
CELERYBEAT_GROUP="root"

CELERY_CREATE_LOGDIR=1
